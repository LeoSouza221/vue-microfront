    "paths": {
      "@micro/shared": ["./packages/shared/src"],
      "@micro/shared/*": ["./packages/shared/src/*"]
    },
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node16",
    "module": "Node16",
    "noEmit": false
  }
}
