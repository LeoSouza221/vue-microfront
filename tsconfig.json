{
  "files": [],
  "include": [
    "packages/shared/src/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    { "path": "./packages/shared" },
    { "path": "./apps/host" },
    { "path": "./apps/base" }
